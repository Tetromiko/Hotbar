<UserControl x:Class="Hotbar.Controls.ProgramHolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotbar.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="64">
    <Border x:Name="box" Background="#FF080808" CornerRadius="16" MouseEnter="box_MouseEnter" MouseLeave="box_MouseLeave" AllowDrop="true" Drop="box_Drop" MouseDown="box_MouseDown">
    </Border>
</UserControl>
